<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_day">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:theme="@style/AppTheme.Toolbar">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_find_city_weather"
                    style="@style/SearchViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:hint="@string/enter_location"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/text_label_search_for_city"
            style="@style/TextViewHeaderStyle"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_bubble"
            android:gravity="center"
            android:text="@string/search_for_a_place"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar_layout" />

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginEnd="200dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/image_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_label_search_for_city" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar_layout"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_showing_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_searched_city_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="10"
                    tools:listitem="@layout/item_searched_city" />

                <ImageView
                    android:id="@+id/image_weather_symbol"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/square_rounded_shape_bg"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/weather_picture"
                    app:layout_constraintBottom_toBottomOf="@+id/text_todays_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_label_today" />

                <TextView
                    android:id="@+id/text_label_today"
                    style="@style/TextViewHeaderStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/today"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/image_weather_symbol"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_searched_city_temperature" />

                <TextView
                    android:id="@+id/text_todays_date"
                    style="@style/TextViewNormalStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/text_label_today"
                    app:layout_constraintTop_toBottomOf="@+id/text_label_today"
                    tools:text="Tues, 20 Sep" />

                <TextView
                    android:id="@+id/text_temperature"
                    style="@style/TextViewHeaderStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="84sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_todays_date"
                    tools:text="24" />

                <TextView
                    android:id="@+id/text_label_degree"
                    style="@style/TextViewBodyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/temperature_c"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/text_temperature"
                    app:layout_constraintTop_toTopOf="@+id/text_temperature" />

                <TextView
                    android:id="@+id/text_city_name"
                    style="@style/TextViewBodyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_temperature"
                    tools:text="@string/Manila_label" />

                <ImageView
                    android:id="@+id/image_weather_human_reaction"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="@dimen/image_width_25"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/weather_picture"
                    app:layout_constraintBottom_toTopOf="@id/detailsContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_city_name"
                    tools:srcCompat="@drawable/cf_sunny" />

                <LinearLayout
                    android:id="@+id/detailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_weather_human_reaction"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/text_padding"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:padding="@dimen/average_padding"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/space_5"
                            android:layout_marginBottom="@dimen/time_text_size"
                            android:layout_weight="1"
                            android:background="@drawable/square_rounded_shape_bg"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/text_padding">

                            <ImageView
                                android:id="@+id/img_weather_pictures"
                                android:layout_width="@dimen/image_width"
                                android:layout_height="@dimen/image_height"
                                android:contentDescription="@string/weather_picture" />

                            <TextView
                                android:id="@+id/tv_main_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/condition_main"
                                android:textSize="@dimen/sunrise_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_main"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/weather_main"
                                android:textSize="@dimen/time_text_size"
                                android:textStyle="bold" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/text_padding"
                            android:layout_weight="1"
                            android:background="@drawable/square_rounded_shape_bg"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/text_padding">

                            <ImageView
                                android:layout_width="@dimen/image_width_25"
                                android:layout_height="@dimen/image_width_25"
                                android:contentDescription="@string/humid_label"
                                android:src="@drawable/humidity" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/humidity"
                                android:textSize="@dimen/sunrise_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_humidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/humid_label"
                                android:textSize="@dimen/time_text_size"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/square_rounded_shape_bg"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="@dimen/image_width_25"
                                android:layout_height="@dimen/image_width_25"
                                android:contentDescription="@string/wind"
                                android:src="@drawable/wind" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/wind"
                                android:textSize="@dimen/sunrise_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_wind_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/wind_label_0_82"
                                android:textSize="@dimen/updated_date_label"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:padding="@dimen/space_5"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/space_5"
                            android:layout_weight="1"
                            android:background="@drawable/square_rounded_shape_bg"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/text_padding">

                            <ImageView
                                android:layout_width="@dimen/image_width"
                                android:layout_height="@dimen/image_height"
                                android:contentDescription="@string/equator_image"
                                android:src="@drawable/equator" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pressure"
                                android:textSize="@dimen/text_size_12"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_pressure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pressure_label"
                                android:textSize="@dimen/updated_date_label"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/space_5"
                            android:layout_weight="1"
                            android:background="@drawable/square_rounded_shape_bg"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/text_padding">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:contentDescription="@string/sunset_image"
                                android:src="@drawable/ic_sunrise" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sunrise_label"
                                android:textSize="@dimen/text_size_12"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_sunrise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sunrise_image_label"
                                android:textSize="@dimen/updated_date_label"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/square_rounded_shape_bg"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/text_padding">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:contentDescription="@string/sunset_image"
                                android:src="@drawable/ic_sunset" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sunset_label"
                                android:textSize="@dimen/text_size_12"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_sunset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sunset_image_label"
                                android:textSize="@dimen/updated_date_label"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>